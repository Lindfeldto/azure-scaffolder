			</div>
            <div class="col-md-4">
                <h4>@Resources.<#= ViewDataTypeName #>_Edit_Form_Options</h4>
                <hr />
                <div class="row form-group">
                    <div class="col-md-12">
                        <button data-bind="click: update, enabled: loaded" class="btn btn-default">@Resources.<#= ViewDataTypeName #>_Edit_Save</button>
                    </div>
                </div>
            </div>
		</form>
	</section>
</div>

@section scripts{
	@Scripts.Render("~/bundles/jqueryval")

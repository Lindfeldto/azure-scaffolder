@model MVCSample.Models.Category
@using MVCSample.Views.Category

@{
	ViewBag.Title = string.Format(Resources.Category_Delete_Title_Format, "Category");
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <section id="deleteForm">
        <form id="form">
			<div class="col-md-8">
				<h4>@string.Format(Resources.Category_Delete_Form_Header_Format, "Category")</h4>
				<hr />
				<div class="alert alert-warning" data-bind="visible: error" style="visibility: hidden;"><strong>Warning!</strong><span data-bind="text: errorMessage"></span></div>
				<div class="alert alert-info" data-bind="visible: loading"><strong>Loading </strong><span>your data</span></div>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(m => m.PublicId, new Dictionary<string, object>() { { "class", "form-control" }, { "data-bind", "value: PublicId" } })
				
					<div class="form-group">
					<div class="row">
						@Html.LabelFor(m => m.ModelGuid, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: ModelGuid"></span>
						</div>
					</div>
				</div>
					<div class="form-group">
					<div class="row">
						@Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: Name"></span>
						</div>
					</div>
				</div>
					<div class="form-group">
					<div class="row">
						@Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: Description"></span>
						</div>
					</div>
				</div>
					<div class="form-group">
					<div class="row">
						@Html.LabelFor(m => m.Order, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: Order"></span>
						</div>
					</div>
				</div>
					<div class="form-group">
					<div class="row">
						@Html.LabelFor(m => m.ParentCategoryPublicId, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: ParentCategoryPublicId_Name"></span>
						</div>
					</div>
				</div>
				</div>
            <div class="col-md-4">
                <h4>@Resources.Category_Delete_Form_Options</h4>
                <hr />
                <div class="row form-group">
                    <div class="col-md-12">
                        <button data-bind="click: delete, enabled: loaded" class="btn btn-warning">@Resources.Category_Delete_Delete</button>
                    </div>
                </div>
            </div>
		</form>
	</section>
</div>

@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/kendo")
	
	<script src="/Scripts/Data/Categories.js"></script>
	<script src="/Scripts/Data/Category.js"></script>

	<script type="text/javascript">

		$(document).ready( function() {
		
			CategoryData.Init("@ViewBag.PublicId");

			CategoryData.Load($("form"));

		});

	</script>
}
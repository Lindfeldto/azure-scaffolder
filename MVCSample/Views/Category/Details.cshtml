@model MVCSample.Models.Category
@using MVCSample.Views.Category

@{
	ViewBag.Title = string.Format(Resources.Category_Details_Title_Format, "Category");
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <section>
        <form id="form">
			<div class="col-md-8">
				<h4>@string.Format(Resources.Category_Details_Form_Header_Format, "Category")</h4>
				<hr />
				<div class="alert alert-info" data-bind="visible: loading"><strong>Loading </strong><span>your data</span></div>
				@Html.HiddenFor(m => m.PublicId, new Dictionary<string, object>() { { "class", "form-control" }, { "data-bind", "value: PublicId" } })

				<div class="form-group" data-bind="visible: loading">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            <span class="sr-only">loading...</span>
                        </div>
                    </div>
                </div>

					<div class="form-group" data-bind="visible: loaded">
					<div class="row">
						@Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: Name"></span>
						</div>
					</div>
				</div>
					<div class="form-group" data-bind="visible: loaded">
					<div class="row">
						@Html.LabelFor(m => m.Description, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: Description"></span>
						</div>
					</div>
				</div>
					<div class="form-group" data-bind="visible: loaded">
					<div class="row">
						@Html.LabelFor(m => m.Order, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: Order"></span>
						</div>
					</div>
				</div>
					<div class="form-group" data-bind="visible: loaded">
					<div class="row">
						@Html.LabelFor(m => m.ParentCategoryPublicId, new { @class = "col-md-3 control-label" })
						<div class="col-md-9">
							<span data-bind="text: ParentCategoryPublicId_Display"></span>
						</div>
					</div>
				</div>
				</div>
            <div class="col-md-4">
                <h4>@Resources.Category_Details_Form_Options</h4>
                <hr />
                <div class="row form-group">
                    <div class="col-md-12">
						<a href="/Category/Edit/@ViewBag.PublicId" class="btn btn-info" data-bind="enabled: loaded">@Resources.Category_Index_Edit</a>
						<a href="/Category/Delete/@ViewBag.PublicId" class="btn btn-danger" data-bind="enabled: loaded">@Resources.Category_Index_Delete</a>
                    </div>
                </div>
            </div>
		</form>
	</section>
</div>

@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/kendo")

	<script src="/Scripts/Data/Categories.js"></script>
	<script src="/Scripts/Data/Category.js"></script>

	<script type="text/javascript">

		$(document).ready( function() {
		
			CategoryData.Init("@ViewBag.PublicId");

			CategoryData.Load($("form"));

		});

	</script>
}